{
  "compilerOptions": {
    // ... (opsi-opsi Anda yang lain mungkin sudah ada di sini)

    "target": "es2016",         // Pastikan targetnya modern
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* === TAMBAHKAN ATAU PASTIKAN DUA BARIS INI ADA DAN 'true' === */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
"esModuleInterop": true
  },
  "include": ["src/**/*"] // Pastikan ini juga ada
}